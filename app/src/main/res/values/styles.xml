<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="wavesStyle">@style/WaveViewStyle</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="WaveViewStyle">
        <item name="waveColor">@color/colorAccent</item>
        <item name="waveGap">16dp</item>
        <item name="waveStrokeWidth">2dp</item>
        <item name="waveAnimationDuration">1500</item>
    </style>

</resources>
